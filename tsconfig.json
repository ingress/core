{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2015", "es2016"],
    "declaration": true,
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "removeComments": true,
    "noUnusedParameters": true
  }
}
