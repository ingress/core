{
  "name": "ingress",
  "version": "3.9.0",
  "description": "Composable nodejs applications",
  "main": "lib/ingress.js",
  "files": [
    "lib",
    "!**/*.spec.js"
  ],
  "keywords": [],
  "scripts": {
    "lint": "eslint \"src/**/*\" --fix",
    "prepublish": "npm run build",
    "build": "rm -rf lib && npm run lint && tsc",
    "watch:typescript": "TSC_NONPOLLING_WATCHER=true tsc -w",
    "watch:test": "jest --watchAll --detectOpenHandles",
    "watch": "npm run build && concurrently -k \"npm:watch:typescript\" \"npm:watch:test\" -c blue,green",
    "test": "jest --passWithNoTests"
  },
  "jest": {
    "testRegex": ".*?(\\.spec).js",
    "watchPathIgnorePatterns": [
      "\\.ts$"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [],
    "overrides": [
      {
        "files": [
          "*.spec.ts"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "rules": {}
  },
  "prettier": {
    "parser": "typescript",
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "dependencies": {
    "@hapi/subtext": "~7.0.3",
    "@ingress/di": "^1.2.0",
    "@ingress/http-status": "^1.1.0",
    "app-builder": "^6.2.0",
    "destroy": "~1.0.4",
    "on-finished": "~2.3.0",
    "reflect-annotations": "^2.6.0",
    "route-recognizer": "0.2.9",
    "rxjs": "~6.5.4",
    "websocket": "~1.0.31"
  },
  "devDependencies": {
    "@types/destroy": "~1.0.0",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.4",
    "@types/on-finished": "~2.3.1",
    "@types/route-recognizer": "0.0.27",
    "@types/sinon": "^7.5.1",
    "@types/websocket": "~1.0.0",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "concurrently": "^5.1.0",
    "cross-fetch": "~3.0.4",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "~6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-watch": "^6.0.1",
    "get-port": "~5.1.1",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "reflect-metadata": "^0.1.13",
    "sinon": "^9.0.0",
    "typescript": "^3.7.5"
  }
}
