{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "outDir": "./lib/esm",
    "module": "es2015",
    "lib": ["dom", "dom.iterable", "es2020"],
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
